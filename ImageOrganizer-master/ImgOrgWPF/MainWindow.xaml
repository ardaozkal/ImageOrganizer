<Window x:Class="ImgOrgWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImgOrgWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="85"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="38"/>
        </Grid.RowDefinitions>
        <Image x:Name="image" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.RowSpan="1" Grid.ColumnSpan="2"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Stretch" Height="24" TextWrapping="Wrap" KeyUp="textBox_KeyUp" Text="" VerticalAlignment="Center" Grid.Row="1" Grid.Column="1" Margin="0,7"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Stretch" Grid.Row="1" TextWrapping="Wrap" Text="100000/100000" VerticalAlignment="Center" Height="16" Margin="0,11"/>

    </Grid>
</Window>
